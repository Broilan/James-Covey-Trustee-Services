---
const nav = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/staff", label: "Team" },
  { href: "/contact", label: "Contact" },
];
---

<header class="border-b">
  <!-- Accent bar -->
  <div class="h-1 w-full bg-accent"></div>

  <div class="mx-auto max-w-7xl px-4 py-3 sm:py-4 flex items-center justify-between gap-4">
    
    {/* Brand */}
    <a
      href="/"
      class="flex items-center gap-3 min-w-0"
    >
    <img
    src="/JPC-1.png"
    alt="JPC logo"
    class="
      h-10 sm:h-12 md:h-14 lg:h-16
      w-auto
      shrink-0
      object-contain
    "
  />  

      <span class="min-w-0 leading-tight">
        <span class="block text-xs sm:text-sm font-normal text-brand truncate">
          Law Offices of
        </span>
        <span class="block text-sm sm:text-base font-semibold truncate">
          James P. Covey, P.A.
        </span>
      </span>
    </a>

    {/* Navigation */}
    <nav aria-label="Primary" class="hidden md:block">
      <ul class="flex gap-6 text-sm font-medium">
        {nav.map(i => (
          <li>
            <a
              href={i.href}
              class="hover:underline underline-offset-4"
            >
              {i.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    {/* Call button */}
    <a
      href="tel:+17727706160"
      class="
        hidden sm:inline-flex
        text-sm
        rounded-lg
        px-3 py-2
        border border-accent
        text-accent
        hover:bg-accent hover:text-white
        transition
        whitespace-nowrap
      "
    >
      Call (772) 770-6160
    </a>
  </div>
</header>